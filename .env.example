# Copy to .env and replace placeholders. Never commit .env.
# See docs/phase0/06-environment-and-secrets.md for full list.

# Core (required for local run)
DATABASE_URL=postgresql://defense:PLACEHOLDER@localhost:5432/defense
REDIS_URL=redis://localhost:6379/0
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
JWT_SECRET=PLACEHOLDER_CHANGE_IN_PROD_MIN_32_CHARS
JWT_ALGORITHM=HS256
# Local only: allow Bearer dev-token for dashboard (do not set in prod)
# ALLOW_DEV_TOKEN=true

# API base URLs (for gateway; local Docker)
ASSET_SERVICE_URL=http://asset-service:8000
TELEMETRY_SERVICE_URL=http://telemetry-service:8000
ALERT_SERVICE_URL=http://alert-service:8000
CONTROL_SERVICE_URL=http://control-service:8000
INFERENCE_SERVICE_URL=http://inference-service:8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional: AWS (request credentials from operator before use)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_TELEMETRY=
# S3_BUCKET_DATASETS=
# S3_BUCKET_MODELS=

# Optional: Roboflow (request API key before use)
# ROBOFLOW_API_KEY=
# ROBOFLOW_WORKSPACE=

# Optional: MQTT / hardware (request before connecting to real assets)
# MQTT_BROKER_URL=mqtt://localhost:1883
# MQTT_USERNAME=
# MQTT_PASSWORD=
# DRONE_API_BASE_URL=
# DRONE_API_KEY=

# Dashboard
NEXT_PUBLIC_API_URL=http://localhost:8000
